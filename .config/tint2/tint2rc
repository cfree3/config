# Taskbar
taskbar_mode = single_desktop
taskbar_padding = 2 2 2
taskbar_background_id = 1

## Tasks
task_icon = 1
task_text = 1
task_maximum_size = 300 22
task_centered = 0
task_padding = 3 3
task_font = dejavu sans 9
task_font_color = #000000 100
task_background_id = 2
task_icon_asb = 100 0 0
task_active_background_id = 3
task_active_font_color = #000000 100
task_active_icon_asb = 100 0 0
task_iconified_background_id = 4
task_iconified_font_color = #000000 100
task_iconified_icon_asb = 100 0 0
urgent_nb_of_blink = 5

# System Tray
systray = 1
systray_padding = 1 1 1
systray_background_id = 1
systray_sort = left2right
systray_icon_size = 16
systray_icon_asb = 100 0 0

# Clock
time1_format = %a %b %e %l:%M %p
time1_font = dejavu sans 9
clock_font_color = #000000 100
