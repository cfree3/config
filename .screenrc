# ~/.screenrc | Curtis Free (http://curtisfree.com)

# General settings.
altscreen on
autodetach on
startup_message off
vbell off

# Retain 1000 lines of scrollback history.
defscrollback 1000

# Display the selected window and a (right-aligned) window list.
caption always "[%n]%=[ %w ]"

# This is an alternate caption that gives the hardstatus.
#caption always "[%n][ %h ]%=[ %w ]"

# This is an optional hardstatus with a tab-like window list.
#hardstatus alwayslastline "%{=r d}%-w%{=b d}%n%f %t%{=r d}%+w"

# Update terminal titlebar.
termcapinfo xterm 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'

