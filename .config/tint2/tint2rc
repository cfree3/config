## Background #2
rounded = 1
border_width = 1
background_color = #E7E7E7 100
border_color = #777777 100

## Background #3
rounded = 1
border_width = 1
background_color = #DDDDDD 100
border_color = #777777 100

## Background #4
rounded = 1
border_width = 1
background_color = #EEEEEE 100
border_color = #777777 100

# Panel
panel_monitor = all
panel_position = top center
panel_size = 100% 24
panel_margin = 0 0
font_shadow = 0
panel_background_id = 1
