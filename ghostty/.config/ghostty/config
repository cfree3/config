# ~/.config/ghostty/config | Curtis Free (https://curtisfree.com)
# Configuration for the Ghostty terminal emulator.

# Core Configuration
command = /opt/homebrew/bin/zsh
term = xterm-256color
theme = light:"Tomorrow",dark:"Tomorrow Night"
window-height = 30
window-width = 130
clipboard-paste-protection = false
shell-integration-features = no-title
window-inherit-font-size = false

# Mac-Specific Configuration
macos-icon = xray
macos-titlebar-style = native
macos-titlebar-proxy-icon = hidden

# Keybindings
## "Fix" <C-Enter> [1]
keybind = ctrl+enter=text:\r

# Local (Machine-Specific) Changes
## Place in ~/.local/config/ghostty/config
config-file = ?../../.local/config/ghostty/config

# References
# ----------
# [1] https://github.com/ghostty-org/ghostty/discussions/3151#discussioncomment-11678064
