# ~/.gmrunrc | Curtis Free (http://curtisfree.com)
# Configuration for Gmrun; based on default config.

# Use URxvt.
Terminal = urxvtc
TermExec = ${Terminal} -e

# Display with a width of 250px.
Width = 250

# Remember 100 previous commands.
History = 100

# Show the previously-executed command when opened.
ShowLast = 1

# Don't suggest hidden (dot) files.
ShowDotFiles = 0

# Immediately respond to tabs.
TabTimeout = 0

# Open URLs in Firefox.
URL_http = firefox %u
